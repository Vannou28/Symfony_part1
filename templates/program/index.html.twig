{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Toutes les séries de la table program : </h1>
    <div class="container">
        <div class="card-deck d-flex flex-wrap m-4">
            {% for program in programs %}
                <a href="{{ path("program_show", { slug: program.slug }) }}">
                    <div class="card" style="width: 18rem;">
                        <img class="card-img-top" src="{{program.poster}}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">Card title</h5>
                            <h2>{{ loop.index }} / {{ program.title }} - Catégorie : {{ program.category.name }}</h2>
                            <p>{{ program.summary }}</p>
                            <a href="{{ path("program_show", { slug: program.slug }) }}" class="btn btn-primary">Go somewhere</a>
                        </div>
                    </div>
                </a>
            {% endfor %}
        </div>
    </div>
    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}